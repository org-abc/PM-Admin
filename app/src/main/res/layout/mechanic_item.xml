<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1"
    android:shrinkColumns="1"
    android:background="@color/blue_grey">

    <TableRow
        android:id="@+id/mechanic_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dimen_ten"
        android:layout_marginBottom="@dimen/dimen_ten">

        <ImageView
            android:id="@+id/mechanic_dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="1dp"
            android:background="@drawable/dark_background_image_background"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mechanic_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kondie"
                android:layout_marginLeft="@dimen/dimen_ten"
                android:textColor="@color/white"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/grey"></View>

        </LinearLayout>

        <Button
            android:id="@+id/mechanic_status"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="Not active"
            android:background="@drawable/not_active_backg"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"/>

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:id="@+id/hidden_mechanic_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </TableRow>

</TableLayout>